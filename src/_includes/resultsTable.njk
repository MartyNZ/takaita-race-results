<div class="results-table">
  <table>
    <tbody>
      <tr>
        <th>Rank</th>
        <th>Boat Name</th>
        <th>Sail #</th>
        <th>Race 1</th>
        <th>Race 2</th>
        <th>Race 3</th>
        <th>Nett Score</th>
        <th>Rating</th>
      </tr>
      {# {% set cardSlug %}{{ boat.boat | slug }}{% endset %} #}
      {% for boat in Summer2021.results %}
      <tr>
        <td>{{ boat.rank }}</td>
        <td>{{ boat.boat }}</td>
        <td>{{ boat.sailno }}</td>
        <td>{{ boat.r1 | replace(".0","") }}</td>
        <td>{{ boat.r2 | replace(".0","") }}</td>
        <td>{{ boat.r3 | replace(".0","") }}</td>
        <td>{{ boat.nett | replace(".0","") }}</td>
        <td>{{ boat.rating }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

